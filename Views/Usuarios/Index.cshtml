@model IEnumerable<MaratonProgramacion.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if(TempData["mensaje"] != null || TempData["mensaje"] != string.Empty)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Usuarios registrados</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success " asp-action="Create" asp-controller="Usuarios">Agregar Nuevo Usuario</a>
            <a class="btn btn-success " asp-action="GenerarCSV" asp-controller="Usuarios">Export</a>
            <a class="btn btn-success " asp-action="VerArchivo" asp-controller="Usuarios">Ver Archivo</a>

        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.Apellido)</td>
                        <td>@Html.DisplayNameFor(m => m.Identificacion)</td>
                        <td>@Html.DisplayNameFor(m => m.Correo)</td>
                        <td>@Html.DisplayNameFor(m => m.LenguajeProgramacion)</td>
                        <td>@Html.DisplayNameFor(m => m.Lider)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Identificacion</td>
                        <td>@item.Correo</td>
                        <td>@item.LenguajeProgramacion</td>
                        <td>@item.Lider</td>
                        <td>
                            <a asp-controller="Usuarios" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Usuarios" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            <a asp-controller="Usuarios" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay registros</p>
        }
    </div>
</div>

